@model DoctorFAM.Domain.ViewModels.UserPanel.CustomerAdvertisement.CustomerAdvertisementDetailUserPanelViewModel
@using DoctorFAM.Application.StaticTools

@{
    ViewData["Title"] = "جزییات تبلیغات";
}

@section Breadcrumb
    {
    <li>
        <a href="javascript:void(0)"> @ViewData["Title"] </a>
    </li>
}

    @section Scripts
    {
    <partial name="_JqueryValidation" />
}

        <div class="col-lg-9 col-sm-9 col-xs-12">
            <div id="settings" class="tab-pane  active">
                <div class="widget-header bordered-bottom bordered-success">
                    <span class="widget-caption"> جزییات تبلیغات  </span>
                </div>
                <div class="widget-body">
                    <div class="row">

                        <div class="col-sm-12">
                            <div class="form-group">
                                <label>عنوان </label>
                                <input readonly class="form-control" placeholder="@Model.Title" />
                            </div>
                        </div>

                        <div class="clearfix"></div>

                        <div class="col-sm-12">
                            <div class="form-group">
                                <label>توضیح کوتاه </label>
                                <input readonly class="form-control" placeholder="@Model.ShortDescription" />
                            </div>
                        </div>

                        <div class="clearfix"></div>

                        <div class="form-group col-md-6 col-sm-12">
                            <label asp-for="StartDate">تاریخ شروع</label>
                            <input type="text" readonly class="form-control"  style="z-index:9999!important;" asp-for="StartDate">
                        </div>

                        <div class="form-group col-md-6 col-sm-12">
                            <label asp-for="EndDate">تاریخ پایان</label>
                            <input type="text" class="form-control" readonly style="z-index:9999!important;" asp-for="EndDate">
                        </div>

                        <div class="clearfix"></div>

                        <div class="form-group col-md-12 col-sm-12">
                            <label>وضعیت</label>
                            <select asp-for="CustomerAdvertisementState"  class="form-control" asp-items="Html.GetEnumSelectList(typeof(DoctorFAM.Domain.Enums.CustomerAdvertisement.CustomerAdvertisementState))"></select>
                        </div>

                        <div class="clearfix"></div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>مبلغ </label>
                                <input asp-for="Price" readonly NumericInput="1" class="form-control" placeholder="@Model.Price" />
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>الویت نمایش </label>
                                <input asp-for="Priority" readonly class="form-control" placeholder="@Model.Priority" />
                            </div>
                        </div>

                        <div class="clearfix"></div>

                        <div class="form-group col-md-12">
                            <label>توضیح کامل</label>
                            <textarea class="form-control" ckeditor="1" readonly>@Model.LongDescription</textarea>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-sm-12">
            <div class="row">

                <div class="col-lg-12">
                    <div class="widget">
                        <div class="widget-header bordered-bottom bordered-green">
                            <span class="widget-caption"> تصویر تبلیغ </span>
                        </div>
                        <div class="widget-body">
                            <div class="row">

                                <div class="col-md-12 tc mt-10px">
                                    <img src="@PathTools.CustomerAdvertisementPathThumb/@Model.Image" class="image-style" ImageFile="1" />
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-12">
                    <div class="widget">
                        <div class="widget-header bordered-bottom bordered-green">
                            <span class="widget-caption"> وضعیت </span>
                        </div>
                        <div class="widget-body">
                            <div class="row">
                                <div class="col-md-12">

                                    <div class="form-group">
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" asp-for="ShowInfinit">
                                                <span class="text"> نمایش همیشگی </span>
                                            </label>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
