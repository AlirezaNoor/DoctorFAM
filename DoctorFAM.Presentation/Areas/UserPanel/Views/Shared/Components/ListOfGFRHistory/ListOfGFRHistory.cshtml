@model List<DoctorFAM.Domain.Entities.BMI.GFR>
@using DoctorFAM.Application.Extensions
@using DoctorFAM.Application.Convertors
@using DoctorFAM.Domain.ViewModels.Common
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedLocalizer> SharedHtmlLocalizer


<div class="col-lg-6">
    <div class="widget">
        <div class="widget-header bordered-bottom bordered-info">
            <i class="widget-icon fa fa-tags info"></i>
            <span class="widget-caption info">@SharedLocalizer["List Of GFR History"]</span>
        </div><!--Widget Header-->
        <div class="widget-body  no-padding" style="max-height: 150px !important; height:auto; overflow-y: scroll;">
            <div class="tickets-container">
                <ul class="tickets-list">
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var gfr in Model)
                        {
                            <li class="ticket-item">
                                <div class="row">

                                    <div class="ticket-time  col-lg-4 col-sm-6 col-xs-12">
                                        <div class="divider hidden-md hidden-sm hidden-xs"></div>
                                        <i class="fa fa-heart"></i>
                                        <span class="time"> @SharedHtmlLocalizer["Your GFR"] : @((decimal)gfr.GFRResult / (decimal)100) </span>
                                    </div>
                                    <div class="ticket-time  col-lg-4 col-sm-6 col-xs-12">
                                        <div class="divider hidden-md hidden-sm hidden-xs"></div>
                                        <i class="fa fa-heart"></i>
                                        <span class="time"> @SharedHtmlLocalizer["Your Age"] : @gfr.Age</span>
                                    </div>
                                    <div class="ticket-time  col-lg-4 col-sm-6 col-xs-12">
                                        <div class="divider hidden-md hidden-sm hidden-xs"></div>
                                        <i class="fa fa-clock-o"></i>
                                        <span class="time">  @gfr.CreateDate.ToShamsiDate()</span>
                                    </div>
                        
                                </div>
                            </li>
                        }
                    }
                    else
                    {
                        <partial name="_UserPanelNotFoundPartial" />
                    }

                </ul>
            </div>
        </div>
    </div>

</div>


