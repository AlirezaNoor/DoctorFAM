

@model DoctorFAM.Domain.ViewModels.UserPanel.Home.HomeDashboardViewModel
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedLocalizer> SharedHtmlLocalizer

@{
    ViewData["Title"] = "داشبورد";
}

@section Breadcrumb{
}

<div class="page-body">


    <div class="row">
        <div class="col-lg-6 col-sm-6 col-xs-12">
            <div class="row">
              
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4  buttons-preview text-center justify-content-center">
                    <a asp-area="UserPanel" asp-controller="Home" asp-action="Index" class="btn btn-success  btn-circle btn-lg"><i class="glyphicon glyphicon-home"></i></a>
                    <span style="font-size:12PX;"> داشبورد </span>
                </div>
               <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4  buttons-preview  text-center justify-content-center">
                    <a asp-area="UserPanel" asp-controller="Account" asp-action="EditProfile" class="btn btn-info  btn-circle btn-lg"><i class="fa fa-user"></i></a>
                    <span style="font-size:12PX;">اطلاعات کاربری</span>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4  buttons-preview  text-center justify-content-center">
                    <a asp-area="UserPanel" asp-controller="PopulationCovered" asp-action="ListOfPopulationCovered" class="btn btn-primary  btn-circle btn-lg"><i class="fa fa-users"></i></a>
                    <span style="font-size:12PX;">زیرمجموعه</span>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-sm-6 col-xs-12">
            <div class="row">
              
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4  buttons-preview">
                    <a href="javascript:void(0);" class="btn btn-warning  btn-circle btn-lg"><i class="glyphicon glyphicon-home"></i></a>
                </div>
               <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4  buttons-preview">
                    <a href="javascript:void(0);" class="btn btn-warning  btn-circle btn-lg"><i class="fa fa-user"></i></a>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4  buttons-preview">
                    <a href="javascript:void(0);" class="btn btn-warning  btn-circle btn-lg"><i class="fa fa-users"></i></a>
                </div>
            </div>
        </div>
    </div>





    <hr />
    <br /><br /><br /><br /><br /><br /><br /><br /><br /><br />

    <div class="row">

        @*Check User Decline Family Doctor Request*@
        @await Component.InvokeAsync("CheckUserDeclineFamilyDoctorRequest")

        @*Check User Decline Consultant Request*@
        @await Component.InvokeAsync("CheckUserDeclineConsultantRequest")

        @*Box Of Lastest Requests*@
        <partial name="_ListOfInProgressRequests" model="@Model.ListOfInProgressRequests" />

        @*List Of Future Reservation*@
        @await Component.InvokeAsync("FutureReservationsDetail")

        @*List Of Future Reservation*@
        @await Component.InvokeAsync("ListOfBMIHistory")

        @*List Of Future Reservation*@
        @await Component.InvokeAsync("ListOfGFRHistory")

    </div>

</div>
