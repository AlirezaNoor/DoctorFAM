@model DoctorFAM.Domain.ViewModels.Dentist.SideBar.DentistSideBarViewModel

<!-- Page Sidebar -->
<div class="page-sidebar" id="sidebar">
    <!-- Page Sidebar Header-->
    <div class="sidebar-header-wrapper">
        <input type="text" class="searchinput" />
        <i class="searchicon fa fa-search"></i>
        <div class="searchhelper">به جستجوی صفحات، گزارشات، پیام ها و ایمیل خود بپردازید</div>
    </div>
    <!-- /Page Sidebar Header -->
    <!-- Sidebar Menu -->
    <ul class="nav sidebar-menu">
        <!--Dashboard-->
         <li>
            <a asp-area="" asp-controller="Home" asp-action="Index">
                <i class="menu-icon fa fa-globe"></i>
                <span class="menu-text"> صفحه اصلی سایت </span>
            </a>
        </li>

        <li>
            <a asp-area="Dentist" asp-controller="Home" asp-action="Index">
                <i class="menu-icon glyphicon glyphicon-home"></i>
                <span class="menu-text"> پنل دندانپزشک </span>
            </a>
        </li>

        <li>
            <a asp-area="Dentist" asp-controller="Home" asp-action="Index_Sec">
                <i class="menu-icon glyphicon glyphicon-th"></i>
                <span class="menu-text"> @SharedLocalizer["Dashboard"] </span>
            </a>
        </li>

        @if (Model.DentistInfoState == "Accepted")
        {
            <li>
                <a href="#" class="menu-dropdown">
                    <i class="menu-icon fa fa-users"></i>
                    <span class="menu-text"> @SharedLocalizer["Manage Employees"] </span>
                    <i class="menu-expand"></i>
                </a>

                <ul class="submenu">

                    <li>
                        <a asp-area="Dentist" asp-controller="Account" asp-action="FilterEmployees">
                            <span class="menu-text">@SharedLocalizer["List Of Employees"]</span>
                        </a>
                    </li>

                    <li>
                        <a asp-area="Dentist" asp-controller="Account" asp-action="AddNewUser">
                            <span class="menu-text">@SharedLocalizer["Add New Employee"]</span>
                        </a>
                    </li>
                </ul>
            </li>

            @await Component.InvokeAsync("DentistResumeStateBadge")

            @await Component.InvokeAsync("DentistInfosBadge")
        }

        @if (Model.DentistInfoState != "Accepted")
        {
            @await Component.InvokeAsync("DentistInfosBadge")
        }


        <li>
            <a href="#" class="menu-dropdown">
                <i class="menu-icon fa fa-ticket"></i>
                <span class="menu-text">تیکت پشتیبانی</span>

                <i class="menu-expand"></i>
            </a>

            <ul class="submenu">
                <li>
                    <a asp-area="Dentist" asp-controller="Ticket" asp-action="FilterTickets">
                        <span class="menu-text">@SharedLocalizer["List Of Tickets"]</span>
                    </a>
                </li>
                <li>
                    <a asp-area="Dentist" asp-controller="Ticket" asp-action="CreateTicket">
                        <span class="menu-text">@SharedLocalizer["Create Ticket"]</span>
                    </a>
                </li>
            </ul>
        </li>

    </ul>
    <!-- /Sidebar Menu -->
</div>
<!-- /Page Sidebar -->