@model DoctorFAM.Domain.Entities.Account.User
@using DoctorFAM.Application.Convertors
@using DoctorFAM.Application.Extensions
@using DoctorFAM.Domain.ViewModels.Common

@{
    var roles = ViewData["Roles"] != null ? ViewData["Roles"] as List<DoctorFAM.Domain.Entities.Account.Role> : null;
}

<form asp-action="SelectExistUserForThisOrganization" asp-area="Laboratory" asp-controller="Account" enctype="multipart/form-data" method="post">
    <input type="hidden" name="userId" value="@Model.Id"/>

    <div class="row">

        <div class="col-lg-9 col-sm-9 col-xs-12">
            <div id="settings" class="tab-pane  active">
                <div class="widget-header bordered-bottom bordered-sky">
                    <span class="widget-caption"> @Localizer["Found A User"] </span>
                </div>
                <div class="widget-body">
                    <div class="row">

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="FirstName">@Localizer["First Name"]</label>
                                <div class="form-control"> @Model.FirstName </div>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="LastName">@Localizer["Last Name"]</label>
                                <div class="form-control"> @Model.LastName </div>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="NationalId">@Localizer["NationalId"]</label>
                                <div class="form-control"> @Model.NationalId </div>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="Mobile"></label>
                                <div class="form-control"> @Model.Mobile </div>
                            </div>
                        </div>

                    </div>

                    <div>
                        <button type="submit" class="btn btn-labeled btn-palegreen">
                            <i class="btn-label glyphicon glyphicon-ok"></i>@Localizer["Submit"]
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-sm-12">
            <div class="row">

                <div class="col-lg-12">
                    <div class="widget">
                        <div class="widget-header bordered-bottom bordered-sky">
                            <span class="widget-caption"> @Localizer["User Avatar"] </span>
                        </div>
                        <div class="widget-body">
                            <div class="row">

                                <div class="col-md-12 tc mt-10px">
                                    <img src="@Model.GetUserAvatar()" class="image-style" ImageFile="1" />
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-12">
                    <div class="widget">
                        <div class="widget-header bordered-bottom bordered-sky">
                            <span class="widget-caption"> نقش های کاربر </span>
                        </div>
                        <div class="widget-body">
                            <div class="row">
                                <div class="col-md-12">

                                    @if (roles != null && roles.Any())
                                    {
                                        foreach (var role in roles)
                                        {
                                            <div class="form-group">
                                                <div class="checkbox">
                                                    <label>

                                                        <input type="checkbox" name="UserRoles" value="@role.Id">
                                                        <span class="text"> @role.Title </span>

                                                    </label>
                                                </div>
                                            </div>

                                        }
                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>

</form>