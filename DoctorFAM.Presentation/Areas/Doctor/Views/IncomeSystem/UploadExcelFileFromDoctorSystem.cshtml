@model DoctorFAM.Domain.ViewModels.DoctorPanel.ParsaSystem.VIPPatient.UploadExcelFileFromDoctorSystemViewModel

@{
    ViewData["Title"] = @Localizer["Upload Excel File"];
}

@section Breadcrumb
{
    <li>
        <a href="javascript:void(0)"> @ViewData["Title"] </a>
    </li>
}

    <div class="row">
        <div class="col-lg-12 col-sm-12">

            <div class="widget">
                <div class="widget-header bordered-bottom bordered-green">
                    <span class="widget-caption"> @Localizer["Please Select Your File"] </span>
                </div>
                <div class="widget-body">
                    <div>

                        <form asp-action="UploadExcelFileFromDoctorSystem" asp-controller="IncomeSystem" asp-area="Doctor" method="post" enctype="multipart/form-data">
                            <div class="modal-body">
                                <div class="row">

                                    <div class="form-group col-md-12 col-sm-12">
                                        <label asp-for="LableForPatient"></label>
                                        <input type="text" class="form-control" asp-for="LableForPatient">
                                        <span class="text-danger" asp-validation-for="LableForPatient"></span>
                                    </div> 
                                    
                                    <div class="form-group col-md-12 col-sm-12">
                                        <label asp-for="ExcelFile"></label>
                                        <input type="file" class="form-control" asp-for="ExcelFile">
                                        <span class="text-danger" asp-validation-for="ExcelFile"></span>
                                    </div>

                                    <div class="clearfix"></div>

                                    <div class="form-group col-md-12">
                                        <button type="submit" class="btn btn-success">@Localizer["Submit"]</button>
                                    </div>

                                </div>
                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>


