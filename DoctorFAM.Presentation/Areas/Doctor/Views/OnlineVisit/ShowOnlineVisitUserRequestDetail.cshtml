@model DoctorFAM.Domain.ViewModels.DoctorPanel.OnlineVisit.OnlineVisitUserRequestDetailDoctorSideViewModel
@using DoctorFAM.Application.Extensions
@using DoctorFAM.Application.Convertors
@using DoctorFAM.Domain.ViewModels.Common
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedLocalizer> SharedHtmlLocalizer
@using DoctorFAM.Application.StaticTools

@{
    ViewData["Title"] = "نمایش جزییات درخواست";
}

@section Styles
    {
    <style>

        .header-fullname {
            font: 21px 'YekanBakh-FaNum';
            margin-top: 27px;
            display: inline-block;
        }

    </style>
}

@section Scripts
    {
    <partial name="_JqueryValidation" />
}

@section Breadcrumb
    {
    <li>
        <a asp-action="VisitOnLine" asp-area="Doctor" asp-controller="Home">  ویزیت آنلاین / </a>  کد درخواست : @Model.RequestId </a>
    </li>
}

<div class="row">

    <div class="col-md-12">

        <div class="col-md-12">
            <div class="profile-container">
                <div class="profile-header row">
                    <div class="col-lg-2 col-md-4 col-sm-12 text-center">
                        <img src="@Model.User.GetUserAvatar()" alt="" class="header-avatar">
                    </div>
                    <div class="col-lg-4 col-md-8 col-sm-12 profile-info">
                        <div class="header-fullname">@Model.User.Username</div>

                        <div class="header-information">
                            موبایل: @Model.User.Mobile
                        </div>
                    </div>
                    <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12 profile-stats">
                        <div class="row">
                            <div class="col-lg-4 col-md-12 col-sm-12 col-xs-12 stats-col">
                                <div class="stats-value blue">@(Model.WorkShift)</div>
                                <div class="stats-title">شیفت</div>
                            </div>

                            <div class="col-lg-4 col-md-12 col-sm-12 col-xs-12 stats-col">
                                <div class="stats-value blue">@(Model.WorkShiftTime)</div>
                                <div class="stats-title">زمان نوبت</div>
                            </div>

                            <div class="col-lg-4 col-md-12 col-sm-12 col-xs-12 stats-col">
                                <div class="stats-value blue">@(Model.OnlineVisitRequestDate.ToShamsi())</div>
                                <div class="stats-title">تاریخ نوبت </div>
                            </div>

                        </div>

                    </div>
                </div>

                <div class="profile-body">
                    <div class="col-lg-12">
                        <div class="tabbable">
                            <ul class="nav nav-tabs tabs-flat  nav-justified" id="myTab11">

                                <li class="tab-yellow active">
                                    <a data-toggle="tab" href="#settings" aria-expanded="true">
                                        اطلاعات کاربری درخواست دهنده
                                    </a>
                                </li>
                            </ul>
                            <div class="tab-content tabs-flat">

                                <div id="settings" class="tab-pane active">
                                    <div class="form-title">
                                        اطلاعات کاربر
                                    </div>
                                    <div class="row">

                                        <div class="form-group col-md-6 col-sm-12">
                                            <label>نام</label>
                                            <input type="text" class="form-control" readonly value="@Model.User.FirstName">
                                        </div>

                                        <div class="form-group col-md-6 col-sm-12">
                                            <label>نام خانوادگی</label>
                                            <input type="text" class="form-control" readonly value="@Model.User.LastName">
                                        </div>

                                        <div class="form-group col-md-6 col-sm-12">
                                            <label>کدملی</label>
                                            <input type="text" class="form-control" readonly value="@Model.User.NationalId">
                                        </div>

                                        <div class="form-group col-md-6 col-sm-12">
                                            <label>موبایل کاربر</label>
                                            <input type="text" class="form-control" readonly value="@Model.User.Mobile">
                                        </div>

                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>

    </div>

</div>

