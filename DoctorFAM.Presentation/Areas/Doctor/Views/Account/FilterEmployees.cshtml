@model DoctorFAM.Domain.ViewModels.DoctorPanel.Employees.FilterDoctorOfficeEmployeesViewmodel
@using DoctorFAM.Application.Extensions
@using DoctorFAM.Application.Convertors
@using DoctorFAM.Domain.ViewModels.Common
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedLocalizer> SharedHtmlLocalizer

@{
    ViewData["Title"] = @Localizer["List Of Your Employees"];
}

@section Scripts
{
<partial name="_DoctorPanelSweetAlertLocalizer" />
<partial name="_JqueryValidation" />
}


@section Breadcrumb
{

}

<div class="row">
    <div class="col-lg-3 col-sm-12">

        <a class="btn btn-sky w-100 margin-bottom-10"   > جستجو </a>

        <div class="widget">
            <div class="widget-header bordered-bottom bordered-green">
                <span class="widget-caption"> فیلتر کارکنان </span>
            </div>
            <div class="widget-body">
                <div>
                    <form asp-action="FilterEmployees" asp-controller="Account" asp-area="Doctor" id="filter-search" method="get">

                        <input type="hidden" asp-for="Page" />

                        <div class="form-group">
                            <label asp-for="Username"> </label>
                            <input type="text" class="form-control" asp-for="Username">
                        </div>

                        <div class="form-group">
                            <label asp-for="Mobile"> </label>
                            <input type="text" class="form-control" asp-for="Mobile">
                        </div>


                        <hr />

                        <div class="row">
                            <div class="col-md-12 flex-style">
                                <button type="submit" class="btn btn-labeled w-100 btn-palegreen">
                                    <i class="btn-label glyphicon glyphicon-filter"></i>@Localizer["Filter"]
                                </button>

                                @if (Context.Request.QueryString.HasValue)
                                {
                                    <a asp-action="FilterEmployees" asp-controller="Account" asp-area="Doctor" class="btn btn-labeled w-100 btn-darkorange">
                                        <i class="btn-label glyphicon glyphicon-remove"></i>@Localizer["Delete Filter"]
                                    </a>
                                }
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-9 col-sm-12">
        <div class="well with-header with-footer table-responsive">
            <div class="header bordered-azure">
                <div class="flex-style">
                    <span> @ViewData["Title"]</span>
                </div>
            </div>

            @if (Model.Entities != null && Model.Entities.Any())
            {
                <table class="table table-hover table-bordered tc vm">
                    <thead class="tc vm">
                        <tr class="tc vm">
                            <th class="tc vm">
                                @Localizer["Avatar"]
                            </th>
                            <th class="tc vm">
                                @Localizer["Personal Info"]
                            </th>
                            <th class="tc vm">
                                @Localizer["Possibilities"]
                            </th>
                        </tr>
                    </thead>
                    <tbody class="tc vm">
                        @foreach (var user in Model.Entities)
                        {
                            <tr class="tc vm" remove-ajax-item="@user.Id">
                                <td class="vm">
                                    <div class="flex-style-center">
                                        <img src="@user.User.GetUserAvatar()" style="border-radius:50px;" class="avatar-style" />
                                        <div class="mr-10px">
                                            <span> @user.User.Username </span>
                                        </div>
                                    </div>
                                </td>
                                <td class="tc vm">
                                    @if (!string.IsNullOrEmpty(user.User.Mobile))
                                    {
                                        <p> @user.User.Mobile</p>
                                    }
                                </td>
                                <td class="tc vm">
                                    <button onclick="DeleteAjax(@user.Id, '@Url.Action("DeleteEmployeeFromYourOrganization", "Account", new {area = "Doctor", id = user.UserId})')" class="btn btn-danger btn-circle btn-xs"><i class="glyphicon glyphicon-trash"></i></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="footer tc">
                    <div class="row">
                        <div class="col-md-4">
                            <a class="btn btn-primary w-100 margin-bottom-10" asp-action="AddNewUser" asp-controller="Account" asp-area="Doctor"> <i class="fa fa-plus"></i> افزودن کارمند جدید </a>
                        </div>
                        <div class="col-md-4">
                            <partial name="_DoctorPanelPaging" model="@Model.GetCurrentPaging()" />
                        </div>
                        <div class="col-md-4"></div>
                    </div>

                </div>
            }
            else
            {
                <partial name="_DoctorPanelNotFoundPartial" />
            }
        </div>
    </div>
</div>

