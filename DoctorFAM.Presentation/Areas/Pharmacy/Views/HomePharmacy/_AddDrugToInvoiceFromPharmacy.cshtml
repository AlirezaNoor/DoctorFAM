@model DoctorFAM.Domain.ViewModels.Pharmacy.HomePharmacy.AddDrugFromPharmacyInInvoice

<form id="AddDrug" method="post" asp-action="AddDrugFromPharmacy" asp-controller="HomePharmacy" asp-area="Pharmacy">
    <input type="hidden" asp-for="RequestDetailId" />
    <div class="row">
        <div class="col-lg-12 col-sm-12">
       
                    <div>

                        <div class="row">

                            <div class="form-group col-md-6 col-sm-12">
                                <label asp-for="DrugName">@Localizer["Drug Name"]</label>
                                <input type="text" class="form-control" asp-for="DrugName">
                                <span class="text-danger" asp-validation-for="DrugName"></span>
                            </div>

                            <div class="form-group col-md-6 col-sm-12">
                                <label asp-for="Price">@Localizer["Price"]</label>
                                <input type="text" class="form-control" asp-for="Price">
                                <span class="text-danger" asp-validation-for="Price"></span>
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-md-12 flex-style">
                                <button type="submit" class="btn btn-labeled btn-palegreen">
                                    <i class="btn-label glyphicon glyphicon-ok"></i>@Localizer["Submit"]
                                </button>
                            </div>
                        </div>

                    </div>
          
        </div>

    </div>
</form>
