@model DoctorFAM.Domain.ViewModels.Pharmacy.PharmacySideBar.PharmacySideBarViewModel

<!-- Page Sidebar -->
<div class="page-sidebar" id="sidebar">
    <!-- Page Sidebar Header-->
    <div class="sidebar-header-wrapper">
        <input type="text" class="searchinput" />
        <i class="searchicon fa fa-search"></i>
        <div class="searchhelper">به جستجوی صفحات، گزارشات، پیام ها و ایمیل خود بپردازید</div>
    </div>
    <!-- /Page Sidebar Header -->
    <!-- Sidebar Menu -->
    <ul class="nav sidebar-menu">
        <!--Dashboard-->

        <li>
            <a asp-area="Pharmacy" asp-controller="Home" asp-action="Index">
                <i class="menu-icon glyphicon glyphicon-home"></i>
                <span class="menu-text"> @SharedLocalizer["Dashboard"] </span>
            </a>
        </li>

        @if (Model.PharmacyInfoState == "Accepted")
        {
            @if (Model.HomePharmacy == true)
            {
                <li>
                    <a href="#" class="menu-dropdown">
                        <i class="menu-icon glyphicon glyphicon-thumbs-up"></i>
                        <span class="menu-text"> @SharedLocalizer["Home Pharmacy"] </span>
                        <i class="menu-expand"></i>
                    </a>

                    <ul class="submenu">

                        <li>
                            <a asp-area="Pharmacy" asp-controller="HomePharmacy" asp-action="FilterHomePharamcy">
                                <span class="menu-text">@SharedLocalizer["List Of Requests"]</span>
                            </a>
                        </li>

                        <li>
                            <a asp-area="Pharmacy" asp-controller="HomePharmacy" asp-action="FilterYoursHomePharamcy">
                                <span class="menu-text">@SharedLocalizer["List Of Yours Requests"]</span>
                            </a>
                        </li>

                    </ul>
                </li>
            }

            <li>
                <a href="#" class="menu-dropdown">
                    <i class="menu-icon fa fa-user"></i>
                    <span class="menu-text"> @SharedLocalizer["Profile"] </span>
                    <i class="menu-expand"></i>
                </a>

                <ul class="submenu">

                    <li>
                        <a asp-area="Pharmacy" asp-controller="Account" asp-action="EditProfile">
                            <span class="menu-text">@SharedLocalizer["Edit Profile"]</span>
                        </a>
                    </li>

                    <li>
                        <a asp-area="Pharmacy" asp-controller="Account" asp-action="ChangePassword">
                            <span class="menu-text">@SharedLocalizer["Change Password"]</span>
                        </a>
                    </li>
                </ul>
            </li>

            @await Component.InvokeAsync("PharmacyInfosBadge")
        }

        @if (Model.PharmacyInfoState != "Accepted")
        {
            @await Component.InvokeAsync("PharmacyInfosBadge")
        }


    </ul>
    <!-- /Sidebar Menu -->
</div>
<!-- /Page Sidebar -->