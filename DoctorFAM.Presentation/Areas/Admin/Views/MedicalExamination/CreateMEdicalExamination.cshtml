@using DoctorFAM.Domain.Entities.Account
@model DoctorFAM.Domain.ViewModels.Admin.MedicalExamination.CreateMEdicalExaminationAdminSideViewModel
@{
    ViewData["Title"] = "افزودن عنوان جدید";
}

@section Scripts
    {
    <partial name="_JqueryValidation" />
}

@section Breadcrumb
    {
    <li>
        <a href="javascript:void(0)"> @ViewData["Title"] </a>
    </li>
}

<form method="post" asp-action="CreateMEdicalExamination" asp-controller="MedicalExamination" asp-area="Admin">

    <div class="row">
        <div class="col-lg-12 col-sm-12">
            <div class="widget">
                <div class="widget-header bordered-bottom bordered-green">
                    <span class="widget-caption"> @ViewData["Title"] </span>
                </div>
                <div class="widget-body">
                    <div>

                        <div class="row">
                            <div class="form-group col-md-6 col-sm-12">
                                <label asp-for="MEdicalExaminationName">عنوان معاینه</label>
                                <input type="text" class="form-control" asp-for="MEdicalExaminationName">
                                <span class="text-danger" asp-validation-for="MEdicalExaminationName"></span>
                            </div>

                            <div class="form-group col-md-6 col-sm-12">
                                <label asp-for="PriodMonth">مدت زمان دوره برحسب ماه </label>
                                <input type="number" class="form-control" asp-for="PriodMonth">
                                <span class="text-danger" asp-validation-for="PriodMonth"></span>
                            </div>
                        </div>

                        <hr class="margin-bottom-10 margin-top-10" />

                        <div class="row">
                            <div class="col-md-12 flex-style">
                                <button type="submit" class="btn btn-labeled btn-palegreen">
                                    <i class="btn-label glyphicon glyphicon-ok"></i>ثبت
                                </button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
