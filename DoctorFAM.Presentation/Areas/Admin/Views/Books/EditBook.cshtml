@using DoctorFAM.Domain.ViewModels.Common
@using DoctorFAM.Application.StaticTools
@model DoctorFAM.Domain.ViewModels.Admin.Books.EditBookAdminSideViewModel
@using DoctorFAM.Application.Extensions
@{
    ViewData["Title"] = "ویرایش کتاب جدید";

    var MainCat = ViewData["MianCategory"] != null ? ViewData["MianCategory"] as List<SelectListViewModel> : null;
    var SubCategoryCategory = ViewData["SubCategoryCategory"] != null ? ViewData["SubCategoryCategory"] as List<SelectListViewModel> : null;

}

@section Scripts
    {
    <partial name="_JqueryValidation" />
    <script src="/admin/js/CreateBooks.js"></script>
}

@section Breadcrumb
    {
    <li>
        <a href="javascript:void(0)"> @ViewData["Title"] </a>
    </li>
}

<form method="post" asp-action="EditBook" asp-Controller="Books" asp-area="Admin" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Image" />
    <div class="row">
        <div class="col-lg-9 col-sm-12">
            <div class="widget">
                <div class="widget-header bordered-bottom bordered-yellow">
                    <span class="widget-caption"> @ViewData["Title"] </span>
                </div>
                <div class="widget-body">
                    <div>

                        <div class="row">
                            <div class="form-group col-md-12 col-sm-12">
                                <label asp-for="Title"></label>
                                <input type="text" class="form-control" asp-for="Title">
                                <span class="text-danger" asp-validation-for="Title"></span>
                            </div>

                            <div class="form-group col-md-6 col-sm-12">
                                <label asp-for="Writer"></label>
                                <input type="text" class="form-control" asp-for="Writer">
                                <span class="text-danger" asp-validation-for="Writer"></span>
                            </div>

                            <div class="form-group col-md-6 col-sm-12">
                                <label asp-for="Translator"></label>
                                <input type="text" class="form-control" asp-for="Translator">
                                <span class="text-danger" asp-validation-for="Translator"></span>
                            </div>

                            <div class="form-group col-md-6 col-sm-12">
                                <label asp-for="Publisher"></label>
                                <input type="text" class="form-control" asp-for="Publisher">
                                <span class="text-danger" asp-validation-for="Publisher"></span>
                            </div>

                            <div class="form-group col-md-6 col-sm-12">
                                <label asp-for="YearOfPublish"></label>
                                <input type="text" class="form-control" asp-for="YearOfPublish">
                                <span class="text-danger" asp-validation-for="YearOfPublish"></span>
                            </div>

                            <div class="form-group col-md-6 col-sm-12">
                                <label asp-for="Price"></label>
                                <input type="text" class="form-control" asp-for="Price">
                                <span class="text-danger" asp-validation-for="Price"></span>
                            </div>

                            <div class="form-group col-md-6 col-sm-12">
                                <label asp-for="PagesNO"></label>
                                <input type="text" class="form-control" asp-for="PagesNO">
                                <span class="text-danger" asp-validation-for="PagesNO"></span>
                            </div>


                            <div class="clearfix"></div>

                            <div class="form-group col-md-12 col-sm-12">
                                <label asp-for="Introduction"></label>
                                <input type="text" class="form-control" asp-for="Introduction">
                                <span class="text-danger" asp-validation-for="Introduction"></span>
                            </div>

                            <div class="clearfix"></div>

                            <div class="form-group col-md-12 col-sm-12">
                                <label asp-for="BookTag"></label>
                                <input type="text" class="form-control" class="form-control" tagify="1" asp-for="BookTag">
                                <span class="text-danger" asp-validation-for="BookTag"></span>
                            </div>

                            <div class="clearfix"></div>

                        </div>

                        <hr class="margin-bottom-10 margin-top-10" />

                        <div class="row">
                            <div class="col-md-12 flex-style">
                                <button type="submit" class="btn btn-labeled btn-palegreen">
                                    <i class="btn-label glyphicon glyphicon-ok"></i>ثبت
                                </button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-sm-12">
            <div class="row">


                <div class="col-lg-12">
                    <div class="widget">
                        <div class="widget-header bordered-bottom bordered-green">
                            <span class="widget-caption"> دسته بندی کتاب   </span>
                        </div>
                        <div class="widget-body">
                            <div class="form-group">
                                <label asp-for="MainCategory"> سرگروه </label>
                                <select asp-for="MainCategory" class="form-control">
                                    <option value="">انتخاب کنید </option>
                                    @if (MainCat != null && MainCat.Any())
                                    {
                                        foreach (var cat in MainCat)
                                        {
                                            if (Model != null && Model.MainCategory == cat.Id)
                                            {
                                                <option value="@cat.Id" selected="selected"> @cat.Title </option>
                                            }
                                            else
                                            {
                                                <option value="@cat.Id"> @cat.Title </option>
                                            }
                                        }
                                    }
                                </select>
                                <span class="text-danger" asp-validation-for="MainCategory"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="SubCategory"> زیرگروه  </label>
                                <select asp-for="SubCategory" class="form-control">
                                    <option value="">انتخاب کنید </option>
                                    @if (SubCategoryCategory != null && SubCategoryCategory.Any())
                                    {
                                        foreach (var sub in SubCategoryCategory)
                                        {
                                            if (Model != null && Model.SubCategory == sub.Id)
                                            {
                                                <option value="@sub.Id" selected="selected"> @sub.Title </option>
                                            }
                                            else
                                            {
                                                <option value="@sub.Id"> @sub.Title </option>
                                            }
                                        }
                                    }
                                </select>
                                <span class="text-danger" asp-validation-for="SubCategory"></span>
                            </div>

                        </div>

                    </div>
                </div>

                <div class="col-lg-12">
                    <div class="widget">
                        <div class="widget-header bordered-bottom bordered-green">
                            <span class="widget-caption"> فایل ضمیمه </span>
                        </div>
                        <div class="widget-body">
                            <div class="row">

                                <input type="hidden" asp-for="AttachmentFileName">

                                <div class="col-md-12">
                                    <label for="courseAttachmentFile" class="file-input-style">
                                        <i class="glyphicon glyphicon-upload"></i>
                                        <span class="mr-8px">لطفا فایل ضمیمه را انتخاب کنید .</span>
                                    </label>
                                </div>

                                <div class="col-md-12 mt-10px display-none" id="CourseAttachment" inputId="AttachmentFileName" upload-url="@Url.Action("UploadCourseAttachmentFile", "Books", new {area = "Admin"})">
                                    <div class="progress progress-bordered" style="margin-bottom: 10px !important">
                                        <div class="progress-bar progress-bar-blue" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                                            <span class="percent"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-12 mt-10px @((Model != null && !string.IsNullOrEmpty(Model.AttachmentFileName)) ? "" : "display-none")" style="margin-bottom: 5px" id="CourseAttachmentDownloadBox">
                                    <div style="border-radius:10px" class="file-admin-style bg-sky">
                                        <span> فایل ضمیمه </span>
                                        <a asp-action="DownloadAttachmentFile" asp-controller="Books" asp-area="Admin" asp-route-fileName="@((Model != null && !string.IsNullOrEmpty(Model.AttachmentFileName)) ? Model.AttachmentFileName : string.Empty)" class="icon-download-style">
                                            <i class="glyphicon glyphicon-cloud-download"></i>
                                        </a>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>

                <div class="col-lg-12">
                    <div class="widget">
                        <div class="widget-header bordered-bottom bordered-green">
                            <span class="widget-caption"> تصویر کتاب </span>
                        </div>
                        <div class="widget-body">
                            <div class="row">

                                <input type="file" class="display-none" name="BookImage" id="UserAvatar" ImageInput="1" accept=".jpg,.jpeg,.png" />

                                <div class="col-md-12">
                                    <label for="UserAvatar" class="file-input-style">
                                        <i class="glyphicon glyphicon-upload"></i>
                                        <span class="mr-8px"> لطفا یک تصویر را انتخاب کنید</span>
                                    </label>
                                </div>

                                @{
                                    var avatarUrl = PathTools.DefaultProductAvatar;

                                    if (Model != null && !string.IsNullOrEmpty(Model.Image))
                                    {
                                        avatarUrl = $"{PathTools.BooksImagePathThumb}{Model.Image}";
                                    }
                                }

                                <div class="col-md-12 tc mt-10px">
                                    <img src="@avatarUrl" class="image-style" ImageFile="1" />
                                </div>

                            </div>
                        </div>
                    </div>
                </div>


                <div class="col-lg-12">
                    <div class="widget">
                        <div class="widget-header bordered-bottom bordered-yellow">
                            <span class="widget-caption"> وضعیت </span>
                        </div>
                        <div class="widget-body">
                            <div class="row">
                                <div class="col-md-12">

                                    <div class="form-group">
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" asp-for="IsActive">
                                                <span class="text"> فعال </span>
                                            </label>
                                        </div>
                                    </div>


                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

<input type="file" chunk-upload="CourseAttachment" class="display-none" name="courseAttachmentFile" id="courseAttachmentFile" />
