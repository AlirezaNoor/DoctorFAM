@model List<DoctorFAM.Domain.ViewModels.Admin.Resume.WorkHistory.WorkHistoryResumeInAdminPanelViewModel>
@using DoctorFAM.Application.Extensions
@using DoctorFAM.Application.Convertors
@using DoctorFAM.Application.Utils

<div class="form-title">
    بخش سوابق کاری
</div>


    @if (Model != null && Model.Any())
    {
        foreach (var work in Model)
        {
        <ul class="timeline animated fadeInDown">

            <li>
                <div class="timeline-datetime">
                </div>
                <div class="timeline-badge blue">
                    <i class="fa fa-thumb-tack"></i>
                </div>
                <div class="timeline-panel">
                    <div class="timeline-header bordered-bottom bordered-blue">
                        @if (!string.IsNullOrEmpty(work.JobPosition))
                        {
                            <span class="timeline-title">
                                @work.JobPosition
                            </span>
                        }
                    </div>
                    <div class="timeline-body">
                       <div class="row mt-2 ">
                            
                            <div class="col-md-12  ">
                                <p>سمت یا عنوان شغلی : @((string.IsNullOrEmpty(work.JobPosition)) ? "وارد نشده" : work.JobPosition)</p>
                            </div>
                            <div class="col-md-12  ">
                                <p>محل فعالیت : @((string.IsNullOrEmpty(work.WorkAddress)) ? "وارد نشده" : work.WorkAddress)</p>
                            </div>
                            <div class="col-md-12  ">
                                <p>شهر محل اشتغال : @((string.IsNullOrEmpty(work.CityName)) ? "وارد نشده" : work.CityName)</p>
                            </div>
                            <div class="col-md-12  ">
                                <p>کشور محل اشتغال : @((string.IsNullOrEmpty(work.CountryName)) ? "وارد نشده" : work.CountryName)</p>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </li>
        </ul>
        }
    }
else
{
    <div class="alert alert-info fade in">
        @SharedLocalizer["Not Found"]
    </div>
}
