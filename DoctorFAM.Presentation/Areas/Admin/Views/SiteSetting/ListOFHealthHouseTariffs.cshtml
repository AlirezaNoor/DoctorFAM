@model List<DoctorFAM.Domain.Entities.SiteSetting.TariffForHealthHouseServices>
@using DoctorFAM.Application.Convertors
@using DoctorFAM.Application.Extensions

@{
    ViewData["Title"] = "لیست تعرفه های خانه ی سلامت";
}

@section Breadcrumb
    {
    <li>
        <a href="javascript:void(0)"> @ViewData["Title"] </a>
    </li>
}

    @section Styles
    {
    <link href="/admin/css/dataTables.bootstrap.rtl.css" rel="stylesheet" />
}

    @section Scripts
    {
    <script src="~/admin/js/datatable/jquery.dataTables.min.js"></script>
    <script src="~/admin/js/datatable/ZeroClipboard.js"></script>
    <script src="~/admin/js/datatable/dataTables.tableTools.min.js"></script>
    <script src="~/admin/js/datatable/dataTables.bootstrap.min.js"></script>
    <script src="~/admin/js/datatable/datatables-init.js"></script>
    <script>
        InitiateSimpleDataTable.init();
        InitiateEditableDataTable.init();
        InitiateExpandableDataTable.init();
        InitiateSearchableDataTable.init();
    </script>

    }

    <div class="page-body">

        <div class="row text-center ">
            <a asp-action="AddOrEditHealthHouseServiceTariffs" asp-area="Admin" asp-controller="SiteSetting" class="exlStyle btn btn-primary">افزودن تعرفه  </a>
        </div>

        <div class="row">

            <div id="horizontal-form">

            @if (Model != null && Model.Any())
            {

                <div class="widget-body no-padding">
                    <div id="searchable_wrapper" class="dataTables_wrapper form-inline">

                        <table class="table table-bordered table-hover table-striped dataTable" id="searchable" role="grid" aria-describedby="searchable_info">
                            <thead class="bordered-darkorange">
                                <tr role="row">

                                    <th class="sorting" tabindex="0" aria-controls="searchable" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending">عنوان</th>
                                    <th class="sorting" tabindex="0" aria-controls="searchable" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" aria-sort="ascending">مبلغ</th>
                                    <th class="sorting" tabindex="0" aria-controls="searchable" rowspan="1" colspan="1" aria-label="Platform: activate to sort column ascending">وضعیت </th>
                                    <th class="sorting" tabindex="0" aria-controls="searchable" rowspan="1" colspan="1" aria-label="Engine version: activate to sort column ascending"></th>

                                </tr>
                            </thead>

                            <tbody>

                                @foreach (var tariff in Model)
                                {
                                    <tr role="row" class="even responsive" remove-ajax-item="@tariff.Id">

                                        <td class="center ">

                                            @tariff.Title

                                        </td>

                                        <td class="center ">

                                            @tariff.Price ریال

                                        </td>

                                        <td class="sorting_1">
                                            <div class="row" style="width: 100%;margin: auto;text-aling">
                                                @if(tariff.HomeVisit)
                                                {
                                                    <span class=" label label-success"> ویزیت در منزل</span>
                                                    <hr/>
                                                }
                                                @if(tariff.HomeNurse)
                                                {
                                                    <span class=" label label-success"> پرستار در منزل</span>
                                                                                                        <hr/>
                                                }
                                                @if(tariff.DeathCertificate)
                                                {
                                                    <span class=" label label-success"> صدورگواهی فوت</span>
                                                                                                        <hr/>
                                                }

                                            </div>
                                        </td>

                                        <td>
                                            <a asp-action="AddOrEditHealthHouseServiceTariffs" asp-controller="SiteSetting" asp-area="Admin" asp-route-id="@tariff.Id" class="btn btn-warning btn-circle btn-xs"><i class="glyphicon glyphicon-edit"></i></a>
                                        </td>

                                    </tr>

                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            }
            else
            {
                <partial name="_AdminNotFoundPartial" />
            }

        </div>
    </div>

</div>


