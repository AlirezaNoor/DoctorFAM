@model DoctorFAM.Domain.ViewModels.Admin.PeriodicTest.CreatePeriodicTestAdminSideViewModel

@{
    ViewData["Title"] = "افزودن عنوان جدید";
}

@section Scripts
    {
    <partial name="_JqueryValidation" />
}

@section breadcrumb
    {
    <li>
        <a href="javascript:void(0)"> @ViewData["Title"] </a>
    </li>
}

<form method="post" asp-action="CreatePeriodicTest" asp-area="Admin" asp-controller="PeriodicTest" enctype="multipart/form-data">
    <div class="row">
        <div class="col-lg-12 col-sm-12">
            <div class="widget">
                <div class="widget-header bordered-bottom bordered-green">
                    <span class="widget-caption"> @ViewData["Title"] </span>
                </div>
                <div class="widget-body">
                    <div>
                        <div class="row">
                            
                            <div class="form-group col-md-4">
                                <label asp-for="Name">عنوان</label>
                                <input type="text" class="form-control" asp-for="Name" />
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>

                                 <div class="form-group col-md-4">
                                <label asp-for="DurationPerMonth">آزمایش بعدی (برحسب ماه)</label>
                                <input type="number" min="1" class="form-control" asp-for="DurationPerMonth" />
                                <span class="text-danger" asp-validation-for="DurationPerMonth"></span>
                            </div>
                            <div class="form-group col-md-4">
                                <label asp-for="PeriodicTestType">نوع آزمایش</label>
                                <select asp-for="PeriodicTestType" class="form-control" asp-items="Html.GetEnumSelectList(typeof(DoctorFAM.Domain.Enums.PeriodicTestType.PeriodicTestType))"></select>
                                <span class="text-danger" asp-validation-for="PeriodicTestType"></span>
                            </div>

                        </div>

                        <hr class="margin-bottom-10 margin-top-10" />

                        <div class="row">
                            <div class="col-md-12 flex-style">
                                <button type="submit" class="btn btn-labeled btn-palegreen">
                                    <i class="btn-label glyphicon glyphicon-ok"></i>ثبت
                                </button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
</form>

