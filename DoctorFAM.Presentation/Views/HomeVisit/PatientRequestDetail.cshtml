@model DoctorFAM.Domain.ViewModels.Site.Request.PatienAddressForHomeVistiViewModel
@using DoctorFAM.Domain.ViewModels.Common
@using DoctorFAM.Application.StaticTools

@{
    ViewData["Title"] = "آدرس بیمار";
    var countries = ViewData["Countries"] != null ? ViewData["Countries"] as List<SelectListViewModel> : null;
    var states = ViewData["States"] != null ? ViewData["States"] as List<SelectListViewModel> : null;
    var cities = ViewData["Cities"] != null ? ViewData["Cities"] as List<SelectListViewModel> : null;
}

@section Styles
    {
    <style>

        #StateId {
            display: initial !important;
        }

        #CountryId {
            display: initial !important;
        }

        #CityId {
            display: initial !important;
        }

        #EmergencyVisit {
            display: initial !important;
        }

        #FemalePhysician {
            display: initial !important;
        }

        .nice-select {
            display: none !important;
        }

    </style>
}

    @section Scripts
    {
    <partial name="_JqueryValidation" />
    }

    <div class="page-content  formHealth">
        <div class="row HomeVisitTitle text-center  text-align-justify ">

            <div class="col-md-12   text-center  text-align-justify M-5 P-5">

                <h2 class="text-center  text-align-justify ">  درخواست ویزیت پزشک در منزل</h2>

                <p class="text-center  text-align-justify">
                    لطفا آدرس مورد نظر برای ویزیت بیمار را، وارد کنید:
                </p>

            </div>

        </div>

        <div class="container  p-4">

            <form asp-action="PatientRequestDetail" asp-area="" asp-controller="HomeVisit">
                <input asp-for="RequestId" type="hidden" />
                <input asp-for="PatientId" type="hidden" />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">

                    <div class="col-md-6">
                        <div class="row">
                            <div class="form-group col-md-12">
                                <label asp-for="CountryId"></label>
                                <select class="form-control" asp-for="CountryId">
                                    <option value=""> لطفا یک کشور را انتخاب کنید </option>
                                @if (countries != null && countries.Any())
                                {
                                    foreach (var country in countries)
                                    {
                                        if (Model != null && Model.CountryId == country.Id)
                                        {
                                            <option value="@country.Id" selected="selected"> @country.Title </option>
                                        }
                                        else
                                        {
                                            <option value="@country.Id"> @country.Title </option>
                                        }
                                    }
                                }
                            </select>
                            <span class="text-danger" asp-validation-for="CountryId"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-12">
                            <label asp-for="StateId"></label>
                            <select class="form-control" asp-for="StateId">
                                <option value=""> لطفا یک استان را انتخاب کنید </option>
                                @if (states != null && states.Any())
                                {
                                    foreach (var state in states)
                                    {
                                        if (Model != null && Model.StateId == state.Id)
                                        {
                                            <option value="@state.Id" selected="selected"> @state.Title </option>
                                        }
                                        else
                                        {
                                            <option value="@state.Id"> @state.Title </option>
                                        }
                                    }
                                }
                            </select>
                            <span class="text-danger" asp-validation-for="StateId"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-12">
                            <label asp-for="CityId"></label>
                            <select asp-for="CityId" class="form-control">
                                @if (cities != null && cities.Any())
                                {
                                    foreach (var city in cities)
                                    {
                                        if (Model != null && Model.CityId == city.Id)
                                        {
                                            <option value="@city.Id" selected="selected"> @city.Title </option>
                                        }
                                        else
                                        {
                                            <option value="@city.Id"> @city.Title </option>
                                        }
                                    }
                                }
                            </select>
                            <span class="text-danger" asp-validation-for="CityId"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-8">
                            <div class="form-group">
                                <label asp-for="Vilage" class="control-label"></label>
                                <input asp-for="Vilage" class="form-control" />
                                <span asp-validation-for="Vilage" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Distance" class="control-label"></label>
                                <input asp-for="Distance" class="form-control" />
                                <span asp-validation-for="Distance" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="col-md-6">

                    <div class="form-group">
                        <label asp-for="FullAddress" class="control-label"></label>
                        <input asp-for="FullAddress" class="form-control" />
                        <span asp-validation-for="FullAddress" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Phone" class="control-label"></label>
                                <input asp-for="Phone" class="form-control" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Mobile" class="control-label"></label>
                                <input asp-for="Mobile" class="form-control " />
                                <span asp-validation-for="Mobile" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="SendDate" class="control-label"></label>
                                <input asp-for="SendDate" autocomplete="off" DatePicker="3" class="form-control" />
                                <span asp-validation-for="SendDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="StartTime" class="control-label">از ساعت</label>
                                <input asp-for="StartTime" min="1" class="form-control " />
                                <span asp-validation-for="StartTime" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="EndTime" class="control-label">تا ساعت</label>
                                <input asp-for="EndTime" min="1" class="form-control " />
                                <span asp-validation-for="EndTime" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="FemalePhysician">آیا به پزشک خانم نیاز دارید؟</label>
                            <select class="form-control" asp-for="FemalePhysician">
                                <option selected="selected" value="false"> خیر </option>
                                <option value="true"> بله </option>
                            </select>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="EmergencyVisit">آیا درخواست اورژانسی دارید ؟</label>
                            <select class="form-control" asp-for="EmergencyVisit">
                                <option selected="selected" value="false"> خیر </option>
                                <option value="true"> بله </option>
                            </select>
                        </div>

                    </div>

                </div>

                <div class="col-md-12">

                    <div class="col-md-12">
                        <p>شما می توانید با انتخاب نیاز مندی های خود از موارد زیر درخواست خود را تکمیل کنید : </p>
                        <div>
                            @if (Model.ListOfTariffs != null && Model.ListOfTariffs.Any())
                            {
                                <table class="table table-hover table-bordered tc vm text-center align-items-center">

                                    <tr>
                                        <th class=" text-center align-items-center">عنوان</th>
                                        <th class=" text-center align-items-center">مبلغ</th>
                                        <th class=" text-center align-items-center">انتخاب </th>
                                    </tr>

                                    @foreach (var item in Model.ListOfTariffs)
                                    {
                                        <tr class="tc vm text-center align-items-center" remove-ajax-item="@item.Id">

                                            <td class=" text-center align-items-center">@item.Title</td>
                                            <td class=" text-center align-items-center">@item.Price ریال</td>

                                            <td class=" text-center align-items-center">
                                                <input name="SelectedTariffs" type="checkbox" style="height:30px;" value="@item.Id" class="form-control" />
                                            </td>

                                        </tr>
                                    }
                                </table>
                            }
                        </div>
                    </div>

                    <hr />
                    <div class="col-md-12  text-center mt-4">
                        <div class="form-group">

                            <input type="submit" value="ثبت  آدرس" class="btn-Accept" />
                        </div>
                    </div>

                </div>

            </div>

        </form>

    </div>

</div>



