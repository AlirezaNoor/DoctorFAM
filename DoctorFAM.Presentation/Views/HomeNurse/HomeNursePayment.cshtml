@{
    ViewData["Title"] = "پرداخت مبلغ پرستار در منزل ";
}

<div class="page-content">

    <!--coming soon start-->

    <section class="fullscreen-banner p-0">
        <div class="container-fluid p-0 h-100">
            <div class="row h-100">
                <div class="col-lg-5 col-md-12 h-100 d-flex align-items-center text-center">
                    <div class="w-100">
                        <a class="logo" href="index.html">
                            <img id="logo-img" class="img-center" src="images/logo.png" alt="">
                        </a>

                        @if (ViewBag.IsSuccess == true)
                        {
                            <h1 class="mt-4 mb-2 font-w-7"> تراکنش موفقیت آمیز بوده است . </h1>
                        }
                        else
                        {
                            <h1 class="mt-4 mb-2 font-w-7"> تراکنش ناموفق بوده است .. </h1>
                        }

                    </div>
                </div>
                <div class="col-lg-7 col-md-12 h-100 dark-bg p-5 d-flex align-items-center">
                    <div class="coming-soon w-100">
                        <ul class="countdown list-inline d-flex justify-content-between" data-countdown="2022/07/15"></ul>
                        <div>
                            <h4 class="title z-index-1 mb-4"> برای اطلاع رسانی مشترک شوید! </h4>
                            <div class="subscribe-form xs-w-100 w-50">
                                <form id="mc-form" class="group">
                                    <input type="email" value="" name="EMAIL" class="email" id="mc-email" placeholder="آدرس ایمیل را وارد کنید" required="">
                                    <input class="btn-Accept" type="submit" name="subscribe" value="اشتراک">
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!--coming soon end-->

</div>

