@model DoctorFAM.Domain.ViewModels.Site.DurgAlert.ListOfUserDrugsAlertSiteSideViewModel
@using DoctorFAM.Application.Extensions
@using DoctorFAM.Application.Convertors
@using DoctorFAM.Application.StaticTools

@{
    ViewData["Title"] = "هشدار مصرف دارو";
}

@section Styles
    {
    
}

@section Scripts
    {
    <partial name="_JqueryValidation" />
}

<div class="page-content  formHealth">
    <div class="row HomePharmacyTitle text-center  text-align-justify ">
        <div class="col-md-3 page-breadcrumbs">
            <i class="menu-icon fa fa-globe"></i>
            <a asp-area="" asp-controller="Home" asp-action="Index">  <span class="menu-text"> صفحه اصلی سایت </span></a>
            <span>/</span>
            <a asp-area="" asp-controller="Diabet" asp-action="Index">بازگشت به صفحه دیابت</a>
        </div>
        <div class="col-md-6   text-center  text-align-justify M-5 P-5">

            <h2 class="text-center  text-align-justify "> برنامه ریزی مصرف دارو</h2>
        </div>
        <div class="col-md-3 "></div>
    </div>
    <div class="container  p-2">

        <div class="row">

            <div class="col-md-12  col-sm-12">
                <div class="row ">
                    <div class="col-md-12">

                        <div class="row">
                            <div class="col-md-12 mt-3 text-center mb-2">
                                <div class="form-group">
                                    <a asp-action="CreateDrugAlert" asp-area="" asp-controller="Diabet" class="btn-Accept">افزودن داروی جدید</a>
                                </div>
                            </div>
                        </div>

                        <div>
                            @if (Model.DrugAlerts != null && Model.DrugAlerts.Any())
                            {
                                <table class="table table-hover table-bordered tc vm text-center align-items-center">

                                    <tr>
                                        <th class=" text-center align-items-center"> نام دارو</th>
                                        <th class=" text-center align-items-center">دوره ی مصرف دارو</th>
                                        <th class=" text-center align-items-center">تعداد مصرف </th>
                                        <th class=" text-center align-items-center">دسته بندی دارو </th>
                                        <th class=" text-center align-items-center"> تاریخ درج </th>
                                        <th class=" text-center align-items-center">عملیات</th>
                                    </tr>

                                    @foreach (var item in Model.DrugAlerts)
                                    {
                                        <tr class="tc vm text-center align-items-center">

                                            <td class=" text-center align-items-center">

                                                @item.DrugName

                                            </td>

                                            <td class=" text-center align-items-center">
                                                @item.DrugAlertDurationType.GetEnumName()
                                            </td>

                                            <td class=" text-center align-items-center">
                                                <h5> @item.CountOfUsage </h5>
                                            </td>

                                            <td class=" text-center align-items-center">
                                                @((string.IsNullOrEmpty(item.DrugLabel) ? "وارد نشده است" : item.DrugLabel))
                                            </td>

                                            <td class=" text-center align-items-center">
                                                @item.CreateDate.ToShamsi()
                                            </td>

                                            <td class=" text-center align-items-center">
@*
                                                <button onclick="ShowDrugDetailModal(@item.Id)" type="button" class="btn-Accept" data-toggle="modal" data-target="#exampleModal">
                                                    نمایش جزییات
                                                </button>*@

                                                <a asp-action="DeleteDrugAlert" asp-area="" asp-controller="Diabet" asp-route-drugAlertId="@item.Id" class="btn-Accept-Danger">حذف</a>
                                            </td>

                                        </tr>
                                    }
                                </table>
                            }
                        </div>


                    </div>
                </div>

            </div>
        </div>


    </div>

</div>


