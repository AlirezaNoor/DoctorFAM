@model DoctorFAM.Domain.ViewModels.Site.Diabet.BMIViewModel

<form id="BMIForm" asp-action="ProcessBMI" asp-controller="Diabet" asp-area="">
    <h5 class="modal-title" id="exampleModalLabel">محاسبه ی BMI </h5>

    <div class="modal-body">
        <div class="row">

            <div class="col-md-12">
                <div class="form-group">
                    <label class="control-label">آیا مایل هستید که نتیجه ی محاسبات در سوابق شما ثبت گردد ؟</label>
                    <select id="SaveResult" asp-for="SaveResult" class="form-control">
                        <option>انتخاب کنید</option>
                        <option value="0">بله </option>
                        <option value="1">خیر</option>
                    </select>
                </div>
            </div>

            <div class="col-md-12 d-none" id="Login-div">
                <div class="widget ">
                    <div class="sidebar-links">
                        <ul class="list-unstyled ">
                            <li>
                                <p id="DiabetHelp1" class="link-text"> کاربر عزیز برای ثبت نتیجه لطفا از لینک زیر وارد سایت شوید. </p>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="footer">
                    <a asp-action="RedirectToLoginForSaveBMIGFRResult" asp-area="" asp-controller="Diabet" style="padding-top: 10px;padding-bottom: 10px;" class="btn-SelfTest">ورود</a>
                </div>

            </div>

            <div class="form-group col-md-12 col-sm-12 d-none" id="WeightInput">
                <label asp-for="Weight">وزن (برحسب کیلوگرم)</label>
                <input type="number" class="form-control" asp-for="Weight">
                <span class="text-danger" asp-validation-for="Weight"></span>
            </div>

            <div class="form-group col-md-12 col-sm-12 d-none" id="heightInput">
                <label asp-for="Height">قد (برحسب سانتی متر)</label>
                <input type="number" class="form-control" asp-for="Height">
                <span class="text-danger" asp-validation-for="Height"></span>
            </div>

            <hr />

            <div class="footer d-none" id="footer-Div">
                <button type="submit" style="padding-top: 10px;padding-bottom: 10px;padding-right: 20px;padding-left: 20px;" class="btn-SelfTest">ثبت</button>
            </div>

        </div>
    </div>

</form>
