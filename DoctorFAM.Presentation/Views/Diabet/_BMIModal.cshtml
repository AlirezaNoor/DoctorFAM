@model DoctorFAM.Domain.ViewModels.Site.Diabet.BMIViewModel

<form id="BMIForm" asp-action="ProcessBMI" asp-controller="Diabet" asp-area="">
    <h5 class="modal-title" id="exampleModalLabel">محاسبه ی BMI </h5>

    <div class="modal-body">
        <div class="row">

            <div class="form-group col-md-12 col-sm-12">
                <label asp-for="Weight">وزن (برحسب کیلوگرم)</label>
                <input type="number" class="form-control" asp-for="Weight">
                <span class="text-danger" asp-validation-for="Weight"></span>
            </div>

            <div class="form-group col-md-12 col-sm-12">
                <label asp-for="Height">قد (برحسب سانتی متر)</label>
                <input type="number" class="form-control" asp-for="Height">
                <span class="text-danger" asp-validation-for="Height"></span>
            </div>

            <hr />

            <div class="footer">
                <button type="submit" style="padding-top: 10px;padding-bottom: 10px;padding-right: 20px;padding-left: 20px;" class="btn-SelfTest">ثبت</button>
                <button type="button" style="padding-top: 10px;padding-bottom: 10px;padding-right: 20px;padding-left: 20px;" class="btn-SelfTest" data-dismiss="modal">بستن</button>
            </div>

        </div>
    </div>

</form>
