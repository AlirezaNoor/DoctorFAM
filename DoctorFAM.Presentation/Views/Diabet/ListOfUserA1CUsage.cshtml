@model List<DoctorFAM.Domain.ViewModels.Site.Diabet.SMBG_NoteBook.ListOfUserA1CSiteSideViewModel>
@using DoctorFAM.Application.Extensions 
@using DoctorFAM.Application.Convertors 

@{
    ViewData["Title"] = "لیست نتایج آزمایش A1C ";
}

@section Scripts{
    <partial name="_JqueryValidation" />
}

<div class="page-content  formHealth">

    <div class="row PageBannerPic text-center  text-align-justify ">
        <div class="col-md-3 page-breadcrumbs">
            <i class="menu-icon fa fa-globe"></i>
            <a asp-area="" asp-controller="Home" asp-action="Index">  <span class="menu-text"> صفحه اصلی سایت </span></a>
            <span>/</span>
            <a asp-area="" asp-controller="Diabet" asp-action="Index">بازگشت به صفحه دیابت</a>
            <span>/</span>
            <a asp-area="" asp-controller="Diabet" asp-action="SMBGNoteBookPage">دفتر مجازی دیابت</a>
        </div>
        <div class="col-md-6   text-center  text-align-justify M-5 P-5">

            <h2 class="text-center  text-align-justify  ">لیست نتایج آزمایش A1C</h2>
        </div>
        <div class="col-md-3 "></div>
    </div>

    <div class="container mt-2">
        <div class="tab-content section-title" id="nav-tabContent">
            <div role="tabpanel" class=" col-md-12 fade show active" id="tab1-1">
                <div class="row">

                    <div class="col-xl-3 p-3"></div>

                    <div class="col-xl-6 p-3" style="border:1px solid #feb2fa; border-radius:8px;">

                        @if (Model != null && Model.Any())
                        {
                            <table class="table table-hover table-bordered tc vm text-center align-items-center">

                                <tr>
                                    <th class=" text-center align-items-center">نتیجه ی آزمایش</th>
                                    <th class=" text-center align-items-center">تاریخ درج </th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr class="tc vm text-center align-items-center">

                                        <td class=" text-center align-items-center">@item.Result.ToString("0.0")</td>

                                        <td class=" text-center align-items-center">@item.DateTime.ToShamsi()</td>

                                    </tr>
                                }

                            </table>
                        }
                        else
                        {
                            <h2>اطلاعاتی وارد نشده است.</h2>
                        }

                    </div>

                    <div class="col-xl-3 p-3"></div>

                </div>
            </div>
        </div>
    </div>
</div>
